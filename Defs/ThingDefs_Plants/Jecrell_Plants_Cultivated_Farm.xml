<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>Jecs_PlantTobacco</defName>
    <label>tobacco plant</label>
    <description>A leafy plant cultivated for its highly addictive nicotine. Tobacco leaves can be prepared into cigarettes at the crafting spot.</description>
    <statBases>
	  <Nutrition>0.1</Nutrition>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>1</Beauty>
    </statBases>
    <graphicData>
      <texPath>Things/Item/Drug/Tobacco/Plant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <plant>
	  <fertilitySensitivity>1.0</fertilitySensitivity>
      <growDays>5.6</growDays>
      <dieIfLeafless>true</dieIfLeafless>
			
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>Jecs_TobaccoLeaves</harvestedThingDef>
      <harvestYield>11</harvestYield>
      <sowMinSkill>4</sowMinSkill>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.0</max>
      </visualSizeRange>
    </plant>
  </ThingDef>


</Defs>
