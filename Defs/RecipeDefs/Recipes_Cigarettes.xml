<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <RecipeDef Name="Jecs_RollCigarPack">
    <defName>Jecs_RollCigarPack</defName>
    <label>make cigar pack</label>
    <description>Makes five cigars for your colonists' nicotine-infused habits.</description>
    <jobString>Rolling cigars</jobString>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
	<workAmount>350</workAmount>
    <requiredGiverWorkType>Crafting</requiredGiverWorkType>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Jecs_TobaccoLeaves</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
    </ingredients>
    <products>
      <Jecs_TobaccoCigar>5</Jecs_TobaccoCigar>
    </products>
    <fixedIngredientFilter>
      <categories>
        <li>PlantMatter</li>
      </categories>
	  <thingDefs>
        <li>Jecs_TobaccoLeaves</li>
      </thingDefs>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>PlantMatter</li>
      </categories>
      <thingDefs>
        <li>Jecs_TobaccoLeaves</li>
      </thingDefs>
    </defaultIngredientFilter>
    <workSkill>Crafting</workSkill>
	<recipeUsers>
	  <li>CraftingSpot</li>
	</recipeUsers>
</RecipeDef>


